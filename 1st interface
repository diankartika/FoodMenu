#include <iostream>
using namespace std;

int main() {
  cout << "<><><><><><><><><><><><><><><><><><><><><><><>" << endl;
  cout << "            CAFE OF JAVA ISLAND" << endl;
  cout << "<><><><><><><><><><><><><><><><><><><><><><><>" << endl;

  cout << endl;
  cout << "1. Lihat menu makanan" << endl;
  cout << "2. Tambahkan makanan baru" << endl;
  cout << "3. Perbarui informasi mengenai makanan" << endl;
  cout << "4. Hapus informasi mengenai makanan" << endl;
  cout << "5. Keluar" << endl;

  int pilihan;
  cout << endl;
  cout << "Pilih menu yang ingin Anda akses: ";
  cin >> pilihan;

  switch (pilihan) {
    case 1:
      break;
    case 2:
      break;
    case 3:
      break;
    case 4:
      break;
    case 5:
      cout << "Terima kasih telah menggunakan katalog kami!" << endl;
      return 0;
    default:
      cout << "Pilihan tidak valid. Silakan pilih 1-5." << endl;
      break;
  }

  return main();
}

